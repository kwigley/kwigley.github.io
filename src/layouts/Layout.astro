---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.
import "@/styles/globals.css";
import SectionContainer from "@/components/SectionContainer.astro";
import SEO from "@/components/seo/SEO.astro";
import { Icon } from "astro-icon/components";
import { SOCIALS } from "@/config";
import { ViewTransitions } from "astro:transitions";
import Themes from "astro-themes";

const {
  class: className,
  title,
  description,
  keywords,
  url,
  image,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      url={url}
      image={image}
    />
    <ViewTransitions />
    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "f0ca2fe9e06d4653a7ed03a0cc2d3c80"}'></script>
    <!-- End Cloudflare Web Analytics -->
    <Themes />
  </head>

  <body>
    <main class={className}>
      <slot />
    </main>

    <SectionContainer class="mt-32">
      <footer class="py-40 bg-neutral-50">
        <div class="wrap-sm mx-auto px-8 grid gap-16">
          <!-- <h2 -->
