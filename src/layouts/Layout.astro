          <!--   > -->
          <!--     awesome work -->
          <!--   </span>{" "} -->
          <!--   together. -->
          <!-- </h2> -->
          <!-- <p -->
          <!--   class="text-neutral-500 font-medium text-3xl md:text-5xl lg:text-4xl leading-10 tracking-tight lg:tracking-tighter" -->
          <!-- > -->
          <!--   If you want to know more about tweaking my style, adding more posts, -->
          <!--   and making it truly yours, just click on the GitHub link below to -->
          <!--   check out my repo. -->
          <!-- </p> -->
          <div class="text-neutral-500">
            <a
              class="block text-3xl md:text-5xl lg:text-4xl font-medium mb-2 md:mb-8 lg:mb-4 leading-10 tracking-tighter relative hover:underline transition hover:-translate-y-0.5 hover:text-neutral-700 focus-visible:p-1"
              href="mailto:mail@kylewigs.com"
            >
              mail@kylewigs.com
            </a>
            <div
              class="font-medium flex gap-6 md:gap-10 max-w-md text-xl md:text-3xl lg:text-2xl leading-10 tracking-tighter"
            >
              {
                SOCIALS.filter((social) => social.active).map((social) => (
                  <a
                    href={social.href}
                    class="relative transition hover:-translate-y-0.5 hover:text-neutral-700 focus-visible:p-1 flex items-center"
                    target="_blank"
                    title={social.title}
                  >
                    <Icon name={social.icon} class="w-10 h-10 inline" />
                    <span class="sr-only">{social.title}</span>
                  </a>
                ))
              }
            </div>
          </div>
