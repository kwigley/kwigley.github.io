---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  label: string;
  isUnderline?: boolean;
};

const { label, isUnderline, target = "_blank", ...props } = Astro.props;
---

<a
  href={props.href}
  class:list={{
    ["cursor-pointer text-neutral-300 hover:text-neutral-100"]: true,
    ["underline decoration-dashed underline-offset-4"]: isUnderline,
  }}
  rel="noreferrer"
  target={target}
  {...props}>{label}</a
>
