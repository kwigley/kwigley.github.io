---
import clsx from "clsx";

const CardType = {
  default:
    "bg-neutral-50 -mt-1 mb-1 -ml-1 card-clip hover:bg-neutral-100 dark:bg-neutral-900 dark:hover:bg-neutral-800",
  bordered:
    "border-[1px] border-neutral-200 text-primary-500 p-8 hover:border-neutral-300",
};

const {
  link = "",
  class: className,
  target = "",
  type = "default",
} = Astro.props;

const Element = link ? "a" : "div";
const href =
  typeof link === "string" ? link : link?.href != null ? link.href : "";
---

<Element
  href={href}
  target={link ? target : "_self"}
  class={clsx(
    "card text-black/60 block aspect-square relative transition-all duration-300 rounded-[40px] hover:-translate-y-0.5",
    {
      [CardType.default]: type === "default",
      [CardType.bordered]: type === "bordered",
    },
    className,
  )}
>
  <slot />
</Element>
